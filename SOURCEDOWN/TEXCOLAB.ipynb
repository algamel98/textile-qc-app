        "                print(f\"‚úÖ Loaded reference spectral data: {filename}\")\n",
        "\n",
        "    if sample_upload.value:\n",
        "        for filename, file_info in sample_upload.value.items():\n",
        "            temp_path = f\"/tmp/spectral_sample_{filename}\"\n",
        "            with open(temp_path, 'wb') as f:\n",
