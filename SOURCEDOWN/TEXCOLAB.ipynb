        "    plt.figure(figsize=(8, 5))\n",
        "\n",
        "    # Determine bin range\n",
        "    all_areas = list(areas_ref) + list(areas_test)\n",
        "    bins = np.linspace(min(all_areas), max(all_areas), 20)\n",
