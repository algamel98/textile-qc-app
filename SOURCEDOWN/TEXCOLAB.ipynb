        "        ax.set_xticklabels(levels)\n",
        "        ax.legend()\n",
        "        ax.grid(True, alpha=0.3)\n",
        "\n",
        "    plt.suptitle('Wavelet Decomposition Energy', fontsize=14, fontweight='bold')\n",
        "    plt.tight_layout()\n",
